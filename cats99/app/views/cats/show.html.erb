<h1><%= "#{@cat.name}" %></h1>

<table>
  <tr>
    <td>Birthdate</td>
    <td><%= "#{@cat.birth_date}" %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%= "#{@cat.color}" %></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td><%= "#{@cat.sex}" %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= "#{@cat.description}" %></td>
  </tr>


</table>

<h2>Rentals</h2>
<% @cat.rentals.order(:start_date).each do |rental| %>
<p> Start Date: <%= "#{rental.start_date}"  %> End Date: <%= "#{rental.end_date}" %> </p>
<% end %>

<%= button_to "Edit Cat", edit_cat_url, method: :get %>
